@model ModelStudent.Student

@{
    ViewBag.Title = "Student";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <form action="demo_form.asp">
                    Nr. Matricol:   <input type="text" name="id"><br>
                    Nume:           <input type="text" name="nume"><br>
                    Disciplina:     <input type="text" name="disciplina"><br>
                    Nota:           <input type="text" name="nota"><br>
                    Media:          <input type="text" name="media"><br>
                    <input type="Reset" value="Delete" class="btn btn-default" />
                    <input type="submit" value="Adauga Student" class="btn btn-default" />
                </form>
           
                
                
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
